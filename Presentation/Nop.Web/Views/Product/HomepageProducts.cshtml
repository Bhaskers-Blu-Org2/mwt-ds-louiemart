@model KeyValuePair<int, IList<ProductOverviewModel>>

@using Nop.Web.Models.Catalog;

@if (Model.Value.Count > 0)
{
    <div class="product-grid home-page-product-grid">
        <div class="title">
            <strong>@T("HomePage.Products")</strong>
        </div>
        @foreach (var item in Model.Value)
        {
            <div class="item-box">
                @Html.Partial("_ProductBox", item)
            </div>
        }
        <div class="buttons">
            <a class="button-1" href="@Url.Action("Index", "Home", new { page = Model.Key + 1 })">Show More</a>
        </div>
    </div>
}